<h1>Home#index</h1>
<p>Find me in app/views/home/index.html.erb</p>
<h1>List of all contacts</h1>

<%= link_to "New Contact" , new_home_path %>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @home.each do |contact| %>
	<tr>
	<td><%= contact.name %></td>
	<td><%= contact.address %></td>
  <% if can? :update, @home %>
  <td><%= link_to 'Edit' ,edit_home_path(contact) %></td>

  <td><%= link_to 'Destroy', homes_destroy_path(contact), 
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
 <% end %>
             
	</tr>
<% end %>
 </tbody>
</table>

